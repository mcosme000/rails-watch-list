<div class="container my-3">

  <div class="form-container my-3">
    <h1>Add a movie to the list <%= @list.name %></h1>
    <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.input :comment %>
      <%= f.association :movie %>
      <%= f.button :submit, class: "button button-green" %>
    <% end %>
  </div>
</div>
