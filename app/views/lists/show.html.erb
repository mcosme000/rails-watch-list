<%= render 'lists/banner' %>

<div class="movies-container my-4 row">
  <% if @list.movies.any? %>
    <%= render 'lists/movie_card' %>
  <% else %>
    <div class="message p-3 rounded">
      <h3>You don't have any movies in this list yet.</h3>
      <p>What about you add some?</p>
      <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "button button-main" %>
    </div>
  <% end %>

  <hr class="my-5">

  <div class="row">
    <div class="col-12 col-md-6">
      <div class="col-12 bh-success">
        <% if @list.reviews.any? %>
          <%= render 'lists/reviews' %>
        <% else %>
          <p>There are no reviews for this list yet</p>
        <% end %>
      </div>
    </div>
    <div class="col-12 col-md-6">
      <div class="col-12">
        <%= render 'lists/review_form' %>
      </div>
    </div>
  </div>
</div>
